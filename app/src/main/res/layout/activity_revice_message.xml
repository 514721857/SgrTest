<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviceMessageActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="14dp"
            android:height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:padding="7dp"
            android:background="@drawable/btn_shape_bg"
            android:hint="请输入alias"
            android:id="@+id/edit_alias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_alias"
            android:background="@drawable/round_shape_bg"
            android:layout_marginLeft="10dp"
            android:text="添加alias"
            android:layout_width="120dp"
            android:layout_height="35dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="14dp"
            android:height="40dp"
            android:layout_marginLeft="5dp"
            android:padding="7dp"
            android:background="@drawable/btn_shape_bg"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:hint="请输入Tag"
            android:id="@+id/edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_tag"
            android:background="@drawable/round_shape_bg"
            android:layout_marginLeft="10dp"
            android:text="添加tag"
            android:layout_width="120dp"
            android:layout_height="35dp"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/btn_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lin1"
        android:text="发送消息"
        android:background="@drawable/round_shape_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:id="@+id/msg_title"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/msg_content"
            android:text="内容...."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/msg_extra"
            android:text="其他数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>